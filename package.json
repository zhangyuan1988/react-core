{
  "dependencies": {
    "@commitlint/config-conventional": "^18.4.4",
    "commitizen": "^4.3.0",
    "commitlint": "^18.4.4",
    "conventional-changelog-cli": "^4.1.0",
    "husky": "^8.0.3"
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
